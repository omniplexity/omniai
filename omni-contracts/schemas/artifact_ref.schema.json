{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omniai/schemas/artifact_ref.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["artifact_id", "kind", "media_type", "size_bytes", "content_hash", "created_at", "storage_ref"],
  "properties": {
    "artifact_id": {"type": "string", "minLength": 1},
    "kind": {"type": "string", "enum": ["document", "blob", "image", "json"]},
    "media_type": {"type": "string", "minLength": 1},
    "size_bytes": {"type": "integer", "minimum": 0},
    "content_hash": {"type": "string", "pattern": "^sha256:[a-f0-9]{64}$"},
    "created_at": {"type": "string", "format": "date-time"},
    "storage_ref": {"type": "string", "minLength": 1},
    "title": {"type": "string"}
  }
}
