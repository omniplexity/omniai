{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omniai/schemas/policy.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["default", "rules"],
  "properties": {
    "default": {"type": "string", "enum": ["deny"]},
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["action", "effect"],
        "properties": {
          "action": {"type": "string"},
          "effect": {"type": "string", "enum": ["allow", "deny", "require_approval"]}
        }
      }
    }
  }
}