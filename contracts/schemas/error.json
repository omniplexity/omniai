{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omniplexity.github.io/contracts/schemas/error.json",
  "title": "OmniAI Error Envelope",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "error"
  ],
  "properties": {
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string",
          "minLength": 1
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "detail": {
          "type": [
            "string",
            "null"
          ]
        },
        "request_id": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
