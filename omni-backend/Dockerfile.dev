# Development Dockerfile for backend
# Usage: docker-compose -f docker-compose.yml -f docker-compose.override.yml up --build

FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install pip and development dependencies
RUN pip install --no-cache-dir --upgrade pip

# Copy source and pyproject.toml
COPY omni_backend ./omni_backend
COPY pyproject.toml ./

# Install the package in editable mode
RUN pip install --no-cache-dir -e .

# Install dev dependencies (if any)
# RUN pip install --no-cache-dir pytest pytest-asyncio

# Create directories
RUN mkdir -p /app/.omni_artifacts /app/.omni_uploads /app/.data

EXPOSE 8000

# Use uvicorn with auto-reload for development
CMD ["python", "-m", "uvicorn", "omni_backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
